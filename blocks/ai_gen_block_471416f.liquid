{% doc %}
  @prompt
    build a gallery page, it should be 4 column gallery, each image should have an header and description at the top left and should only show on hover
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gallery-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-gallery-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-gallery-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.spacing_below_header }}px;
  }

  .ai-gallery-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-gallery-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-gallery-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-gallery-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .ai-gallery-item-{{ ai_gen_id }}:hover {
    {% if block.settings.enable_hover_scale %}
      transform: scale(1.05);
    {% endif %}
  }

  .ai-gallery-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-gallery-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-gallery-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: {{ block.settings.overlay_padding }}px;
  }

  .ai-gallery-item-{{ ai_gen_id }}:hover .ai-gallery-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-gallery-overlay-content-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-gallery-overlay-title-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.overlay_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
  }

  .ai-gallery-overlay-caption-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.overlay_caption_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-gallery-lightbox-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-gallery-lightbox-{{ ai_gen_id }}.active {
    display: flex;
    opacity: 1;
  }

  .ai-gallery-lightbox-content-{{ ai_gen_id }} {
    position: relative;
    max-width: 90%;
    max-height: 90%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-gallery-lightbox-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
  }

  .ai-gallery-lightbox-close-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
    z-index: 10000;
  }

  .ai-gallery-lightbox-close-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 1);
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
    z-index: 10000;
  }

  .ai-gallery-lightbox-nav-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 1);
  }

  .ai-gallery-lightbox-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-gallery-lightbox-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-gallery-lightbox-caption-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #ffffff;
    background: rgba(0, 0, 0, 0.7);
    padding: 12px 24px;
    border-radius: 4px;
    text-align: center;
    max-width: 80%;
  }

  @media screen and (max-width: 989px) {
    .ai-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-gallery-grid-{{ ai_gen_id }} {
      {% if block.settings.columns_mobile == '1' %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}
    }

    .ai-gallery-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-gallery-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }

    .ai-gallery-overlay-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.overlay_title_size }}px * 0.85);
    }

    .ai-gallery-overlay-caption-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.overlay_caption_size }}px * 0.9);
    }

    .ai-gallery-lightbox-nav-{{ ai_gen_id }} {
