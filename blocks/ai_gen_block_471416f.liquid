      height: 40px;
    }

    .ai-gallery-lightbox-close-{{ ai_gen_id }} {
      width: 35px;
      height: 35px;
      top: 10px;
      right: 10px;
    }
  }
{% endstyle %}

<gallery-block-{{ ai_gen_id }} class="ai-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gallery-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-gallery-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-gallery-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-gallery-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-gallery-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign title_key = 'image_' | append: i | append: '_title'
          assign caption_key = 'image_' | append: i | append: '_caption'
          
          assign image = block.settings[image_key]
          assign title = block.settings[title_key]
          assign caption = block.settings[caption_key]
        %}

        {% if image != blank %}
          <div class="ai-gallery-item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
            <div class="ai-gallery-image-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="ai-gallery-image-{{ ai_gen_id }}"
              >
              {% if title != blank or caption != blank %}
                <div class="ai-gallery-overlay-{{ ai_gen_id }}">
                  <div class="ai-gallery-overlay-content-{{ ai_gen_id }}">
                    {% if title != blank %}
                      <h3 class="ai-gallery-overlay-title-{{ ai_gen_id }}">{{ title }}</h3>
                    {% endif %}
                    {% if caption != blank %}
                      <p class="ai-gallery-overlay-caption-{{ ai_gen_id }}">{{ caption }}</p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if block.settings.enable_lightbox %}
    <div class="ai-gallery-lightbox-{{ ai_gen_id }}">
      <button class="ai-gallery-lightbox-close-{{ ai_gen_id }}" aria-label="Close lightbox">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
      <button class="ai-gallery-lightbox-nav-{{ ai_gen_id }} ai-gallery-lightbox-prev-{{ ai_gen_id }}" aria-label="Previous image">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <div class="ai-gallery-lightbox-content-{{ ai_gen_id }}">
        <img src="" alt="" class="ai-gallery-lightbox-image-{{ ai_gen_id }}">
        <div class="ai-gallery-lightbox-caption-{{ ai_gen_id }}" style="display: none;"></div>
      </div>
      <button class="ai-gallery-lightbox-nav-{{ ai_gen_id }} ai-gallery-lightbox-next-{{ ai_gen_id }}" aria-label="Next image">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  {% endif %}
</gallery-block-{{ ai_gen_id }}>

<script>
  (function() {
    class GalleryBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.images = [];
        this.currentIndex = 0;
      }

      connectedCallback() {
        this.initGallery();
      }

      initGallery() {
        const items = this.querySelectorAll('.ai-gallery-item-{{ ai_gen_id }}');
        const lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        
        if (!lightbox) return;

        const lightboxImage = lightbox.querySelector('.ai-gallery-lightbox-image-{{ ai_gen_id }}');
        const lightboxCaption = lightbox.querySelector('.ai-gallery-lightbox-caption-{{ ai_gen_id }}');
        const closeBtn = lightbox.querySelector('.ai-gallery-lightbox-close-{{ ai_gen_id }}');
        const prevBtn = lightbox.querySelector('.ai-gallery-lightbox-prev-{{ ai_gen_id }}');
        const nextBtn = lightbox.querySelector('.ai-gallery-lightbox-next-{{ ai_gen_id }}');

        items.forEach((item, index) => {
          const img = item.querySelector('.ai-gallery-image-{{ ai_gen_id }}');
          const title = item.querySelector('.ai-gallery-overlay-title-{{ ai_gen_id }}');
          const caption = item.querySelector('.ai-gallery-overlay-caption-{{ ai_gen_id }}');
          
          this.images.push({
            src: img.src.replace(/width=\d+/, 'width=2000'),
            alt: img.alt,
            title: title ? title.textContent : '',
            caption: caption ? caption.textContent : ''
          });

          item.addEventListener('click', () => {
            this.openLightbox(index);
          });
        });

        closeBtn.addEventListener('click', () => this.closeLightbox());
        prevBtn.addEventListener('click', () => this.showPrevious());
        nextBtn.addEventListener('click', () => this.showNext());

        lightbox.addEventListener('click', (e) => {
          if (e.target === lightbox) {
            this.closeLightbox();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (!lightbox.classList.contains('active')) return;
          
          if (e.key === 'Escape') {
            this.closeLightbox();
          } else if (e.key === 'ArrowLeft') {
            this.showPrevious();
          } else if (e.key === 'ArrowRight') {
            this.showNext();
          }
        });
      }

      openLightbox(index) {
        this.currentIndex = index;
        const lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        const lightboxImage = lightbox.querySelector('.ai-gallery-lightbox-image-{{ ai_gen_id }}');
        const lightboxCaption = lightbox.querySelector('.ai-gallery-lightbox-caption-{{ ai_gen_id }}');
        
        lightboxImage.src = this.images[index].src;
        lightboxImage.alt = this.images[index].alt;
        
        const captionText = this.images[index].title || this.images[index].caption;
        if (captionText) {
          lightboxCaption.textContent = captionText;
          lightboxCaption.style.display = 'block';
        } else {
          lightboxCaption.style.display = 'none';
        }
        
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeLightbox() {
        const lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        lightbox.classList.remove('active');
        document.body.style.overflow = '';
      }

      showPrevious() {
        this.currentIndex = (this.currentIndex - 1 + this.images.length) % this.images.length;
        this.updateLightboxImage();
      }

      showNext() {
        this.currentIndex = (this.currentIndex + 1) % this.images.length;
        this.updateLightboxImage();
      }

      updateLightboxImage() {
        const lightbox = this.querySelector('.ai-gallery-lightbox-{{ ai_gen_id }}');
        const lightboxImage = lightbox.querySelector('.ai-gallery-lightbox-image-{{ ai_gen_id }}');
        const lightboxCaption = lightbox.querySelector('.ai-gallery-lightbox-caption-{{ ai_gen_id }}');
        
        lightboxImage.src = this.images[this.currentIndex].src;
        lightboxImage.alt = this.images[this.currentIndex].alt;
        
        const captionText = this.images[this.currentIndex].title || this.images[this.currentIndex].caption;
        if (captionText) {
          lightboxCaption.textContent = captionText;
          lightboxCaption.style.display = 'block';
        } else {
          lightboxCaption.style.display = 'none';
        }
      }
    }

    customElements.define('gallery-block-{{ ai_gen_id }}', GalleryBlock{{ ai_gen_id }});
  })();
</script>

