{% doc %}
  @prompt
    spacer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-spacer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-spacer-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<div class="ai-spacer-{{ ai_gen_id }}" {{ block.shopify_attributes }}></div>

{% schema %}
{
  "name": "Spacer",
  "settings": [
    {
      "type": "range",
      "id": "desktop_height",
      "min": 10,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Desktop height",
      "default": 50
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 10,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Mobile height",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}
