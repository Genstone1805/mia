{% doc %}
  @prompt
    make a banner with header and text and i shopuld be able to reduce the height of the baner
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-banner-container-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
    background-color: {{ block.settings.background_color }};
    position: relative;
    padding: 40px 20px;
  }

  .ai-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_max_width }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-banner-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-container-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
      padding: 30px 15px;
    }

    .ai-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-banner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<ai-banner-{{ ai_gen_id }} class="ai-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-container-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-banner-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</ai-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class AiBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('ai-banner-{{ ai_gen_id }}', AiBanner{{ ai_gen_id }});
  })();
</script>

