<script>
  (function() {
    class GlazeSupportForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.checkbox = this.querySelector('#ai-glaze-questionnaire-checkbox-{{ ai_gen_id }}');
        this.conditionalSection = this.querySelector('#ai-glaze-conditional-section-{{ ai_gen_id }}');
        this.uploadTrigger = this.querySelector('#ai-glaze-upload-trigger-{{ ai_gen_id }}');
        this.fileInput = this.querySelector('#ai-glaze-file-input-{{ ai_gen_id }}');
        this.fileList = this.querySelector('#ai-glaze-file-list-{{ ai_gen_id }}');
        this.files = [];

        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.checkbox && this.conditionalSection) {
          this.checkbox.addEventListener('change', () => {
            if (this.checkbox.checked) {
              this.conditionalSection.classList.add('active');
            } else {
              this.conditionalSection.classList.remove('active');
            }
          });
        }

        if (this.uploadTrigger && this.fileInput) {
          this.uploadTrigger.addEventListener('click', () => {
            this.fileInput.click();
          });

          this.fileInput.addEventListener('change', (e) => {
            const newFiles = Array.from(e.target.files);
            this.files = this.files.concat(newFiles);
            this.renderFileList();
          });
        }
      }

      renderFileList() {
        if (!this.fileList) return;

        this.fileList.innerHTML = '';

        this.files.forEach((file, index) => {
          const fileItem = document.createElement('div');
          fileItem.className = 'ai-glaze-support-form__file-item-{{ ai_gen_id }}';
          
          const fileName = document.createElement('span');
          fileName.textContent = file.name;
          
          const removeButton = document.createElement('button');
          removeButton.type = 'button';
          removeButton.className = 'ai-glaze-support-form__file-remove-{{ ai_gen_id }}';
          removeButton.textContent = '×';
          removeButton.setAttribute('aria-label', 'Remove ' + file.name);
          removeButton.addEventListener('click', () => {
            this.files.splice(index, 1);
            this.renderFileList();
          });
          
          fileItem.appendChild(fileName);
          fileItem.appendChild(removeButton);
          this.fileList.appendChild(fileItem);
        });
      }
    }

    customElements.define('glaze-support-form-{{ ai_gen_id }}', GlazeSupportForm{{ ai_gen_id }});
  })();
</script>

