  .ai-support-form__textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-support-form__textarea-{{ ai_gen_id }} {
    min-height: {{ block.settings.textarea_height }}px;
    resize: vertical;
    font-family: inherit;
  }

