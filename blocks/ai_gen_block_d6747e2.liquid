    margin-bottom: {{ block.settings.field_spacing }}px;
  }

  .ai-support-form__label-{{ ai_gen_id }} {
    display: block;
    margin-bottom: 8px;
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 500;
  }

  .ai-support-form__required-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    margin-left: 4px;
  }

  .ai-support-form__input-{{ ai_gen_id }},
