<support-form-{{ ai_gen_id }} class="ai-support-form-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {%- form 'contact' -%}
    <div class="ai-support-form__container-{{ ai_gen_id }}">
      {% if form.posted_successfully? %}
        <div class="ai-support-form__success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>
      {% endif %}

      {% if form.errors %}
        <div class="ai-support-form__error-{{ ai_gen_id }}">
          {{ form.errors.messages | first }}
        </div>
      {% endif %}

      {% if block.settings.intro_text != blank %}
        <div class="ai-support-form__intro-{{ ai_gen_id }}">
          {{ block.settings.intro_text }}
        </div>
      {% endif %}

      <div class="ai-support-form__checkbox-wrapper-{{ ai_gen_id }}">
        <div class="ai-support-form__checkbox-container-{{ ai_gen_id }}">
          <input
            type="checkbox"
            id="questionnaire-{{ ai_gen_id }}"
            name="contact[questionnaire]"
            class="ai-support-form__checkbox-{{ ai_gen_id }}"
            value="yes"
          >
          <label for="questionnaire-{{ ai_gen_id }}" class="ai-support-form__checkbox-label-{{ ai_gen_id }}">
            {{ block.settings.checkbox_text }}
          </label>
        </div>
      </div>

      <div class="ai-support-form__field-group-{{ ai_gen_id }}">
        <label for="first-name-{{ ai_gen_id }}" class="ai-support-form__label-{{ ai_gen_id }}">
          {{ block.settings.first_name_label }}<span class="ai-support-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="text"
          id="first-name-{{ ai_gen_id }}"
          name="contact[first_name]"
          class="ai-support-form__input-{{ ai_gen_id }}"
          required
          aria-required="true"
        >
      </div>

      <div class="ai-support-form__field-group-{{ ai_gen_id }}">
        <label for="surname-{{ ai_gen_id }}" class="ai-support-form__label-{{ ai_gen_id }}">
          {{ block.settings.surname_label }}<span class="ai-support-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="text"
          id="surname-{{ ai_gen_id }}"
          name="contact[surname]"
          class="ai-support-form__input-{{ ai_gen_id }}"
          required
          aria-required="true"
        >
      </div>

      <div class="ai-support-form__field-group-{{ ai_gen_id }}">
        <label for="email-{{ ai_gen_id }}" class="ai-support-form__label-{{ ai_gen_id }}">
          {{ block.settings.email_label }}<span class="ai-support-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="email"
          id="email-{{ ai_gen_id }}"
          name="contact[email]"
          class="ai-support-form__input-{{ ai_gen_id }}"
          required
          aria-required="true"
          autocomplete="email"
        >
      </div>

      <div class="ai-support-form__field-group-{{ ai_gen_id }}">
        <label for="problem-{{ ai_gen_id }}" class="ai-support-form__label-{{ ai_gen_id }}">
          {{ block.settings.problem_label }}<span class="ai-support-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <textarea
          id="problem-{{ ai_gen_id }}"
          name="contact[body]"
          class="ai-support-form__textarea-{{ ai_gen_id }}"
          required
          aria-required="true"
        ></textarea>
        
        <div class="ai-support-form__helper-text-{{ ai_gen_id }}">
          <div class="ai-support-form__helper-title-{{ ai_gen_id }}">{{ block.settings.helper_title }}</div>
          <ul class="ai-support-form__helper-list-{{ ai_gen_id }}">
            <li>{{ block.settings.helper_item_1 }}</li>
            <li>{{ block.settings.helper_item_2 }}</li>
            <li>{{ block.settings.helper_item_3 }}</li>
          </ul>
        </div>
      </div>

      <div class="ai-support-form__upload-section-{{ ai_gen_id }}">
        <div class="ai-support-form__upload-label-{{ ai_gen_id }}">{{ block.settings.upload_label }}</div>
        <button type="button" class="ai-support-form__upload-button-{{ ai_gen_id }}" data-upload-trigger>
          <svg class="ai-support-form__upload-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          {{ block.settings.upload_button_text }}
        </button>
        <input
          type="file"
          id="file-upload-{{ ai_gen_id }}"
          name="contact[file]"
          class="ai-support-form__file-input-{{ ai_gen_id }}"
          accept="image/*,video/*"
          data-file-input
        >
        <div class="ai-support-form__file-name-{{ ai_gen_id }}" data-file-name></div>
      </div>

      <button type="submit" class="ai-support-form__submit-{{ ai_gen_id }}">
        {{ block.settings.submit_button_text }}
      </button>
    </div>
  {%- endform -%}
</support-form-{{ ai_gen_id }}>

<script>
  (function() {
    class SupportForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.uploadTrigger = this.querySelector('[data-upload-trigger]');
        this.fileInput = this.querySelector('[data-file-input]');
        this.fileNameDisplay = this.querySelector('[data-file-name]');

        if (this.uploadTrigger && this.fileInput) {
          this.uploadTrigger.addEventListener('click', () => {
            this.fileInput.click();
          });

          this.fileInput.addEventListener('change', (e) => {
            const fileName = e.target.files[0]?.name;
            if (fileName && this.fileNameDisplay) {
              this.fileNameDisplay.textContent = fileName;
            }
          });
        }
      }
    }

    customElements.define('support-form-{{ ai_gen_id }}', SupportForm{{ ai_gen_id }});
  })();
</script>

