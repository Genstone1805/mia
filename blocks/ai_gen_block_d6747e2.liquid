    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .ai-support-form__checkbox-{{ ai_gen_id }} {
    margin-top: 4px;
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    cursor: pointer;
    accent-color: {{ block.settings.accent_color }};
  }

  .ai-support-form__checkbox-label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
