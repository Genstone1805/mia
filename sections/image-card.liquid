{% assign section_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .gaze-book-card-container-{{ section_id }} {
    display: block;
    width: 100%;
    padding: 40px;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
  }

  .gaze-book-card-header-{{ section_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .gaze-book-card-title-{{ section_id }} {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0 0 16px;
  }

  .gaze-book-card-description-{{ section_id }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    margin: 0;
  }

  .gaze-book-card-grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .gaze-book-card-item-{{ section_id }} {
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .gaze-book-card-item-{{ section_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .gaze-book-card-image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .gaze-book-card-image-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gaze-book-card-image-wrapper-{{ section_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .gaze-book-card-content-{{ section_id }} {
    padding: 20px;
  }

  .gaze-book-card-item-title-{{ section_id }} {
    font-size: {{ section.settings.card_title_size }}px;
    color: {{ section.settings.card_title_color }};
    margin: 0 0 12px;
  }

  .gaze-book-card-item-description-{{ section_id }} {
    font-size: {{ section.settings.card_description_size }}px;
    color: {{ section.settings.card_description_color }};
    margin: 0;
  }

  .gaze-book-modal-{{ section_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .gaze-book-modal-{{ section_id }}.active {
    display: flex;
  }

  .gaze-book-modal-content-{{ section_id }} {
    position: relative;
    background-color: {{ section.settings.modal_background_color }};
    border-radius: 12px;
    max-width: 800px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    padding: 40px;
  }

  .gaze-book-modal-close-{{ section_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: {{ section.settings.modal_text_color }};
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .gaze-book-modal-close-{{ section_id }}:hover {
    opacity: 1;
  }

  .gaze-book-modal-image-wrapper-{{ section_id }} {
    width: 100%;
    margin-bottom: 24px;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .gaze-book-modal-image-{{ section_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .gaze-book-modal-image-wrapper-{{ section_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .gaze-book-modal-title-{{ section_id }} {
    font-size: {{ section.settings.modal_title_size }}px;
    color: {{ section.settings.modal_text_color }};
    margin: 0 0 16px;
  }

  .gaze-book-modal-description-{{ section_id }} {
    font-size: {{ section.settings.modal_description_size }}px;
    color: {{ section.settings.modal_text_color }};
    margin: 0;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .gaze-book-card-container-{{ section_id }} {
      padding: 24px;
    }

    .gaze-book-card-grid-{{ section_id }} {
      grid-template-columns: 1fr;
    }

    .gaze-book-modal-content-{{ section_id }} {
      padding: 24px;
    }
  }

  @media screen and (min-width: 750px) {
    .gaze-book-card-container-{{ section_id }} {
      width: {{ section.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<card-preview-{{ section_id }} class="gaze-book-card-container-{{ section_id }}" {{ section.shopify_attributes }}>
  <div class="gaze-book-card-header-{{ section_id }}">
    {% if section.settings.main_title != blank %}
      <h2 class="gaze-book-card-title-{{ section_id }}">{{ section.settings.main_title }}</h2>
    {% endif %}
    {% if section.settings.main_description != blank %}
      <div class="gaze-book-card-description-{{ section_id }}">{{ section.settings.main_description }}</div>
    {% endif %}
  </div>

  <div class="gaze-book-card-grid-{{ section_id }}">
    {% for block in section.blocks %}
        <div class="gaze-book-card-item-{{ section_id }}" data-card-index="{{ i }}">
          <div class="gaze-book-card-image-wrapper-{{ section_id }}">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                loading="lazy"
                width="600"
                height="450"
                class="gaze-book-card-image-{{ section_id }}"
              >
            {% endif %}
          </div>
          <div class="gaze-book-card-content-{{ section_id }}">
            {% if block.settings.title != blank %}
              <h3 class="gaze-book-card-item-title-{{ section_id }}">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <div class="gaze-book-card-item-description-{{ section_id }}">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        </div>
    {% endfor %}
  </div>

  <div class="gaze-book-modal-{{ section_id }}" data-modal>
    <div class="gaze-book-modal-content-{{ section_id }}">
      <button class="gaze-book-modal-close-{{ section_id }}" aria-label="Close modal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      <div class="gaze-book-modal-image-wrapper-{{ section_id }}" data-modal-image-wrapper></div>
      <h3 class="gaze-book-modal-title-{{ section_id }}" data-modal-title></h3>
      <div class="gaze-book-modal-description-{{ section_id }}" data-modal-description></div>
    </div>
  </div>
</card-preview-{{ section_id }}>

<script>
  (function() {
    class CardPreview{{ section_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.gaze-book-card-item-{{ section_id }}');
        this.modal = this.querySelector('[data-modal]');
        this.modalImageWrapper = this.querySelector('[data-modal-image-wrapper]');
        this.modalTitle = this.querySelector('[data-modal-title]');
        this.modalDescription = this.querySelector('[data-modal-description]');
        this.closeButton = this.querySelector('.gaze-book-modal-close-{{ section_id }}');

        this.cardData = [
          {
            image: {{ section.settings.card_1_image | image_url: width: 1200 | json }},
            imageAlt: {{ section.settings.card_1_image.alt | json }},
            title: {{ section.settings.card_1_title | json }},
            description: {{ section.settings.card_1_description | json }}
          },
          {
            image: {{ section.settings.card_2_image | image_url: width: 1200 | json }},
            imageAlt: {{ section.settings.card_2_image.alt | json }},
            title: {{ section.settings.card_2_title | json }},
            description: {{ section.settings.card_2_description | json }}
          },
          {
            image: {{ section.settings.card_3_image | image_url: width: 1200 | json }},
            imageAlt: {{ section.settings.card_3_image.alt | json }},
            title: {{ section.settings.card_3_title | json }},
            description: {{ section.settings.card_3_description | json }}
          }
        ];

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.cards.forEach((card) => {
          card.addEventListener('click', () => {
            const cardIndex = parseInt(card.getAttribute('data-card-index')) - 1;
            this.openModal(cardIndex);
          });
        });

        this.closeButton.addEventListener('click', () => {
          this.closeModal();
        });

        this.modal.addEventListener('click', (e) => {
          if (e.target === this.modal) {
            this.closeModal();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }

      openModal(index) {
        const data = this.cardData[index];

        this.modalImageWrapper.innerHTML = '';
        if (data.image) {
          const img = document.createElement('img');
          img.src = data.image;
          img.alt = data.imageAlt || '';
          img.className = 'gaze-book-modal-image-{{ section_id }}';
          this.modalImageWrapper.appendChild(img);
        } else {
          this.modalImageWrapper.innerHTML = '{{ 'image' | placeholder_svg_tag }}';
        }

        this.modalTitle.textContent = data.title || '';
        this.modalDescription.textContent = data.description || '';

        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    customElements.define('card-preview-{{ section_id }}', CardPreview{{ section_id }});
  })();
</script>

