{% assign section_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .gaze-book-card-container-{{ section_id }} {
    display: block;
    width: 100%;
    padding: 40px;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
  }

  .gaze-book-card-header-{{ section_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .gaze-book-card-title-{{ section_id }} {
    font-size: {{ section.settings.title_size }}px !important;
    color: {{ section.settings.title_color }};
    margin: 0 0 16px;
  }

  .gaze-book-card-description-{{ section_id }} {
    font-size: {{ section.settings.description_size }}px !important;
    color: {{ section.settings.description_color }};
    line-height:40px;
    margin: 0;
  }

  .gaze-book-card-grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .gaze-book-card-item-{{ section_id }} {
    background-color: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
  }

  .gaze-book-card-image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .gaze-book-card-image-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gaze-book-card-image-wrapper-{{ section_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .gaze-book-card-content-{{ section_id }} {
    padding: 20px 3px;
  }

  .gaze-book-card-item-title-{{ section_id }} {
    font-size: {{ section.settings.card_title_size }}px;
    color: {{ section.settings.card_title_color }};
    margin: 0 0 12px;
  }

  .gaze-book-card-item-description-{{ section_id }} {
    font-size: {{ section.settings.card_description_size }}px;
    color: {{ section.settings.card_description_color }};
    line-height:30px;
    margin: 0;
  }


  @media screen and (max-width: 749px) {
    .gaze-book-card-container-{{ section_id }} {
      padding: 24px;
    }

    .gaze-book-card-grid-{{ section_id }} {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (min-width: 750px) {
    .gaze-book-card-container-{{ section_id }} {
      width: {{ section.settings.desktop_width_percent }}%;
    }
  }


  .gaze-image-modal-{{ section_id }} {
  position: fixed;
  inset: 0;
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.gaze-image-modal-{{ section_id }}.is-open {
  display: flex;
}

.gaze-image-modal-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.6);
}

.gaze-image-modal-content {
  position: relative;
  z-index: 1;
}

.gaze-image-modal-content img {
  max-width: 90vw;
  max-height: 90vh;
  border-radius: 8px;
  background: #fff;
}

{% endstyle %}

<section class="gaze-book-card-container-{{ section_id }}" {{ section.shopify_attributes }}>
  <div class="gaze-book-card-header-{{ section_id }}">
    {% if section.settings.main_title != blank %}
      <h2 class="gaze-book-card-title-{{ section_id }}">{{ section.settings.main_title }}</h2>
    {% endif %}
    {% if section.settings.main_description != blank %}
      <div class="gaze-book-card-description-{{ section_id }}">{{ section.settings.main_description }}</div>
    {% endif %}
  </div>

  <div class="gaze-book-card-grid-{{ section_id }}">
    {% for block in section.blocks %}
        <div class="gaze-book-card-item-{{ section_id }}" 
            data-preview-image="{{ block.settings.image | image_url: width: 1200 }}"
        >
          <div class="gaze-book-card-image-wrapper-{{ section_id }}">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                loading="lazy"
                width="600"
                height="450"
                class="gaze-book-card-image-{{ section_id }}"
              >
            {% endif %}
          </div>
          <div class="gaze-book-card-content-{{ section_id }}">
            {% if block.settings.title != blank %}
              <h3 class="gaze-book-card-item-title-{{ section_id }}">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <div class="gaze-book-card-item-description-{{ section_id }}">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        </div>
    {% endfor %}
  </div>

  <div class="gaze-image-modal-{{ section_id }}" id="gazeModal-{{ section_id }}">
  <div class="gaze-image-modal-backdrop"></div>
  <div class="gaze-image-modal-content">
    <img src="" alt="" />
  </div>
</div>
</section>


{% schema %}
{
  "name": "Image Card with preview",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Main content"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Title",
      "default": "Our Services"
    },
    {
      "type": "textarea",
      "id": "main_description",
      "label": "Description",
      "default": "Click on any card to view more details"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 32
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#757575"
    },
    {
      "type": "header",
      "content": "Container style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Card style"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background",
      "default": "#f4f4f4"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Card border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "card_title_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Card title size",
      "default": 20
    },
    {
      "type": "range",
      "id": "card_description_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Card description size",
      "default": 14
    },
    {
      "type": "color",
      "id": "card_title_color",
      "label": "Card title color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_description_color",
      "label": "Card description color",
      "default": "#757575"
    }, 
  ],
  "blocks": [
    {
        "type": "image_card",
        "name" : "Image Card",
        "settings": [
            {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
            },
            {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
            },
            {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            },
        ]
    }
  ],
  "presets": [
    {
      "name": "Image Card with preview",
      "category": "Custom"
    }
  ]
}
{% endschema %}