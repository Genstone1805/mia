<section class="text-section">
  <div class="text-section__container">
    
      <div id="text-section-content-{{ section.id }}"
          class="text-section__content section-rte"
      >
        {% for block in section.blocks %}
      <div
        class="accordion__content accordion__content--animate faq-page__item-content js-accordion-content"
      >
        <div
          style="display:grid; grid-template-columns:repeat({{section.settings.grid}}, 1fr); gap:10px"
        >
            <div style="max-height:350px; max-width:350px;">
              <img
                style="width:100%; height:100%; object-fit:contain"
                src="{{ block.settings.image | image_url}}"
                height=""
                width=""
              >
            </div>
        </div>
      </div>
    {% endfor %}
      </div>
  </div>
</section>

{%- schema -%}
{
  "name": "Page Image Grid",
  "settings": [
    {
      "type": "number",
      "id": "grid",
      "label": "Image Grid",
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Image Grid",
      "category": "Custom"
    }
  ]
}
{%- endschema -%}
