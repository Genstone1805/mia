{% assign section_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .custom-glaze-support-form-{{ section_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_desktop }}px;
    font-family: {{ section.settings.font.family }}, sans-serif;
    font-weight: {{ section.settings.font.weight }};
  }

  @media screen and (max-width: 749px) {
    .custom-glaze-support-form-{{ section_id }} {
      padding: {{ section.settings.padding_mobile }}px;
    }
  }

  .custom-glaze-support-form__container-{{ section_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  .custom-glaze-support-form__intro-{{ section_id }} {
    margin-bottom: 32px;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.intro_text_size }}px;
    line-height: 1.6;
  }

  .custom-glaze-support-form__checkbox-wrapper-{{ section_id }} {
    margin-bottom: 32px;
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .custom-glaze-support-form__checkbox-{{ section_id }} {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    cursor: pointer;
    flex-shrink: 0;
    accent-color: {{ section.settings.accent_color }};
  }

  .custom-glaze-support-form__checkbox-label-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.label_text_size }}px;
    cursor: pointer;
    line-height: 1.5;
  }

  .custom-glaze-support-form__conditional-section-{{ section_id }} {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.4s ease, opacity 0.3s ease, margin 0.3s ease;
    margin-bottom: 0;
  }

  .custom-glaze-support-form__conditional-section-{{ section_id }}.active {
    max-height: 500px;
    opacity: 1;
    margin-bottom: 32px;
  }

  .custom-glaze-support-form__section-title-{{ section_id }} {
    font-size: {{ section.settings.section_title_size }}px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
    margin-bottom: 20px;
    font-family: {{ section.settings.heading_font.family }}, sans-serif;
  }

  .custom-glaze-support-form__radio-group-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .custom-glaze-support-form__radio-wrapper-{{ section_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .custom-glaze-support-form__radio-{{ section_id }} {
    width: 18px;
    height: 18px;
    cursor: pointer;
    flex-shrink: 0;
    accent-color: {{ section.settings.accent_color }};
  }

  .custom-glaze-support-form__radio-label-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.label_text_size }}px;
    cursor: pointer;
    line-height: 1.4;
  }

  .custom-glaze-support-form__field-group-{{ section_id }} {
    margin-bottom: 28px;
  }

  .custom-glaze-support-form__label-{{ section_id }} {
    display: block;
    margin-bottom: 8px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.label_text_size }}px;
    font-weight: 500;
  }

  .custom-glaze-support-form__required-{{ section_id }} {
    color: {{ section.settings.required_color }};
    margin-left: 4px;
  }

  .custom-glaze-support-form__input-{{ section_id }},
  .custom-glaze-support-form__textarea-{{ section_id }} {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid {{ section.settings.input_border_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    font-size: {{ section.settings.input_text_size }}px;
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.input_background_color }};
    font-family: {{ section.settings.font.family }}, sans-serif;
    transition: border-color 0.2s ease;
  }

  .custom-glaze-support-form__input-{{ section_id }}:focus,
  .custom-glaze-support-form__textarea-{{ section_id }}:focus {
    outline: none;
    border-color: {{ section.settings.accent_color }};
  }

  .custom-glaze-support-form__textarea-{{ section_id }} {
    min-height: 180px;
    resize: vertical;
    line-height: 1.6;
  }

  .custom-glaze-support-form__helper-text-{{ section_id }} {
    margin-top: 8px;
    font-size: {{ section.settings.helper_text_size }}px;
    color: {{ section.settings.helper_text_color }};
    line-height: 1.5;
  }

  .custom-glaze-support-form__helper-list-{{ section_id }} {
    margin: 8px 0 0 0;
    padding: 0;
    list-style: none;
  }

  .custom-glaze-support-form__helper-list-{{ section_id }} li {
    position: relative;
    padding-left: 20px;
    margin-bottom: 6px;
    font-size: {{ section.settings.helper_text_size }}px;
    color: {{ section.settings.helper_text_color }};
    line-height: 1.5;
  }

  .custom-glaze-support-form__helper-list-{{ section_id }} li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: {{ section.settings.accent_color }};
    font-size: 18px;
    line-height: 1.3;
  }

  .custom-glaze-support-form__upload-section-{{ section_id }} {
    margin-bottom: 32px;
  }

  .custom-glaze-support-form__upload-label-{{ section_id }} {
    display: block;
    margin-bottom: 12px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.label_text_size }}px;
    font-weight: 500;
  }

  .custom-glaze-support-form__upload-button-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: {{ section.settings.accent_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
    font-family: {{ section.settings.font.family }}, sans-serif;
  }

  .custom-glaze-support-form__upload-button-{{ section_id }}:hover {
    background-color: {{ section.settings.accent_color_hover }};
    transform: translateY(-1px);
  }

  .custom-glaze-support-form__upload-icon-{{ section_id }} {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .custom-glaze-support-form__file-input-{{ section_id }} {
    display: none;
  }

  .custom-glaze-support-form__file-list-{{ section_id }} {
    margin-top: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .custom-glaze-support-form__file-item-{{ section_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 12px;
    background-color: {{ section.settings.file_item_background }};
    border-radius: 4px;
    font-size: {{ section.settings.helper_text_size }}px;
    color: {{ section.settings.text_color }};
  }

  .custom-glaze-support-form__file-remove-{{ section_id }} {
    background: none;
    border: none;
    color: {{ section.settings.required_color }};
    cursor: pointer;
    padding: 4px;
    font-size: 14px;
  }

  .custom-glaze-support-form__submit-button-{{ section_id }} {
    width: 100%;
    padding: 18px 32px;
    background-color: {{ section.settings.accent_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
    font-family: {{ section.settings.font.family }}, sans-serif;
  }

  .custom-glaze-support-form__submit-button-{{ section_id }}:hover {
    background-color: {{ section.settings.accent_color_hover }};
    transform: translateY(-2px);
  }

  .custom-glaze-support-form__submit-button-{{ section_id }}:active {
    transform: translateY(0);
  }

  .custom-glaze-support-form__row-{{ section_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  @media screen and (max-width: 749px) {
    .custom-glaze-support-form__row-{{ section_id }} {
      grid-template-columns: 1fr;
      gap: 28px;
    }
  }

  .custom-glaze-support-form__success-message-{{ section_id }} {
    padding: 16px;
    background-color: {{ section.settings.success_background }};
    color: {{ section.settings.success_text_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    margin-bottom: 20px;
    font-size: {{ section.settings.label_text_size }}px;
    display: none;
  }

  .custom-glaze-support-form__success-message-{{ section_id }}.active {
    display: block;
  }

  .custom-glaze-support-form__error-message-{{ section_id }} {
    padding: 16px;
    background-color: {{ section.settings.error_background }};
    color: {{ section.settings.error_text_color }};
    border-radius: {{ section.settings.input_border_radius }}px;
    margin-bottom: 20px;
    font-size: {{ section.settings.label_text_size }}px;
    display: none;
  }

  .custom-glaze-support-form__error-message-{{ section_id }}.active {
    display: block;
  }
{% endstyle %}

<glaze-support-form-{{ section_id }}
  class="custom-glaze-support-form-{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="custom-glaze-support-form__container-{{ section_id }}">
    <div class="custom-glaze-support-form__intro-{{ section_id }}">
      {{ section.settings.intro_text }}
    </div>

    {%- form 'contact' -%}
      <input type="hidden" name="contact[subject]" value="Glaze Troubleshooting Support Request">

      <div
        id="custom-glaze-support-form-success-{{ section_id }}"
        class="custom-glaze-support-form__success-message-{{ section_id }} {% if form.posted_successfully? %}active{% endif %}"
        {% if form.posted_successfully? %}
          aria-live="polite"
        {% endif %}
      >
        {{ section.settings.success_message }}
      </div>

      <div
        id="custom-glaze-support-form-error-{{ section_id }}"
        class="custom-glaze-support-form__error-message-{{ section_id }} {% if form.errors %}active{% endif %}"
        {% if form.errors %}
          aria-live="assertive"
        {% endif %}
      >
        {% if form.errors %}
          {{ form.errors.messages | first }}
        {% endif %}
      </div>

      <div class="custom-glaze-support-form__checkbox-wrapper-{{ section_id }}">
        <input
          type="checkbox"
          id="custom-glaze-questionnaire-checkbox-{{ section_id }}"
          class="custom-glaze-support-form__checkbox-{{ section_id }}"
        >
        <label
          for="custom-glaze-questionnaire-checkbox-{{ section_id }}"
          class="custom-glaze-support-form__checkbox-label-{{ section_id }}"
        >
          {{ section.settings.checkbox_text }}
        </label>
      </div>

      <div
        id="custom-glaze-conditional-section-{{ section_id }}"
        class="custom-glaze-support-form__conditional-section-{{ section_id }}"
      >
        <h3 class="custom-glaze-support-form__section-title-{{ section_id }}">
          {{ section.settings.conditional_section_title }}
        </h3>
        <div class="custom-glaze-support-form__radio-group-{{ section_id }}">
          <div class="custom-glaze-support-form__radio-wrapper-{{ section_id }}">
            <input
              type="radio"
              id="custom-glaze-radio-unfired-{{ section_id }}"
              name="contact[problem_type]"
              value="An unfired SOGO glaze"
              class="custom-glaze-support-form__radio-{{ section_id }}"
            >
            <label
              for="custom-glaze-radio-unfired-{{ section_id }}"
              class="custom-glaze-support-form__radio-label-{{ section_id }}"
            >
              {{ section.settings.radio_option_1 }}
            </label>
          </div>
          <div class="custom-glaze-support-form__radio-wrapper-{{ section_id }}">
            <input
              type="radio"
              id="custom-glaze-radio-fired-{{ section_id }}"
              name="contact[problem_type]"
              value="A fired glaze result of a SOGO glaze"
              class="custom-glaze-support-form__radio-{{ section_id }}"
            >
            <label
              for="custom-glaze-radio-fired-{{ section_id }}"
              class="custom-glaze-support-form__radio-label-{{ section_id }}"
            >
              {{ section.settings.radio_option_2 }}
            </label>
          </div>
          <div class="custom-glaze-support-form__radio-wrapper-{{ section_id }}">
            <input
              type="radio"
              id="custom-glaze-radio-nonsogo-{{ section_id }}"
              name="contact[problem_type]"
              value="A non-SOGO glaze"
              class="custom-glaze-support-form__radio-{{ section_id }}"
            >
            <label
              for="custom-glaze-radio-nonsogo-{{ section_id }}"
              class="custom-glaze-support-form__radio-label-{{ section_id }}"
            >
              {{ section.settings.radio_option_3 }}
            </label>
          </div>
          <div class="custom-glaze-support-form__radio-wrapper-{{ section_id }}">
            <input
              type="radio"
              id="custom-glaze-radio-other-{{ section_id }}"
              name="contact[problem_type]"
              value="Something else"
              class="custom-glaze-support-form__radio-{{ section_id }}"
            >
            <label
              for="custom-glaze-radio-other-{{ section_id }}"
              class="custom-glaze-support-form__radio-label-{{ section_id }}"
            >
              {{ section.settings.radio_option_4 }}
            </label>
          </div>
        </div>
      </div>

      <div class="custom-glaze-support-form__row-{{ section_id }}">
        <div class="custom-glaze-support-form__field-group-{{ section_id }}">
          <label
            for="custom-glaze-firstname-{{ section_id }}"
            class="custom-glaze-support-form__label-{{ section_id }}"
          >
            {{ section.settings.first_name_label -}}
            <span class="custom-glaze-support-form__required-{{ section_id }}">*</span>
          </label>
          <input
            type="text"
            id="custom-glaze-firstname-{{ section_id }}"
            name="contact[first_name]"
            class="custom-glaze-support-form__input-{{ section_id }}"
            required
            aria-required="true"
          >
        </div>

        <div class="custom-glaze-support-form__field-group-{{ section_id }}">
          <label
            for="custom-glaze-surname-{{ section_id }}"
            class="custom-glaze-support-form__label-{{ section_id }}"
          >
            {{ section.settings.surname_label -}}
            <span class="custom-glaze-support-form__required-{{ section_id }}">*</span>
          </label>
          <input
            type="text"
            id="custom-glaze-surname-{{ section_id }}"
            name="contact[last_name]"
            class="custom-glaze-support-form__input-{{ section_id }}"
            required
            aria-required="true"
          >
        </div>
      </div>

      <div class="custom-glaze-support-form__field-group-{{ section_id }}">
        <label
          for="custom-glaze-email-{{ section_id }}"
          class="custom-glaze-support-form__label-{{ section_id }}"
        >
          {{ section.settings.email_label -}}
          <span class="custom-glaze-support-form__required-{{ section_id }}">*</span>
        </label>
        <input
          type="email"
          id="custom-glaze-email-{{ section_id }}"
          name="contact[email]"
          class="custom-glaze-support-form__input-{{ section_id }}"
          required
          aria-required="true"
          autocomplete="email"
        >
      </div>

      <div class="custom-glaze-support-form__field-group-{{ section_id }}">
        <label
          for="custom-glaze-problem-{{ section_id }}"
          class="custom-glaze-support-form__label-{{ section_id }}"
        >
          {{ section.settings.problem_label -}}
          <span class="custom-glaze-support-form__required-{{ section_id }}">*</span>
        </label>
        <textarea
          id="custom-glaze-problem-{{ section_id }}"
          name="contact[body]"
          class="custom-glaze-support-form__textarea-{{ section_id }}"
          required
          aria-required="true"
        ></textarea>
        <div class="custom-glaze-support-form__helper-text-{{ section_id }}">
          {{ section.settings.helper_text_intro }}
          <ul class="custom-glaze-support-form__helper-list-{{ section_id }}">
            <li>{{ section.settings.helper_item_1 }}</li>
            <li>{{ section.settings.helper_item_2 }}</li>
            <li>{{ section.settings.helper_item_3 }}</li>
          </ul>
        </div>
      </div>

      <div class="custom-glaze-support-form__upload-section-{{ section_id }}">
        <div class="custom-glaze-support-form__upload-label-{{ section_id }}">
          {{ section.settings.upload_label }}
        </div>
        <button
          type="button"
          class="custom-glaze-support-form__upload-button-{{ section_id }}"
          id="custom-glaze-upload-trigger-{{ section_id }}"
        >
          <svg class="custom-glaze-support-form__upload-icon-{{ section_id }}" viewBox="0 0 24 24">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          {{ section.settings.upload_button_text }}
        </button>
        <input
          type="file"
          id="custom-glaze-file-input-{{ section_id }}"
          class="custom-glaze-support-form__file-input-{{ section_id }}"
          accept="image/*,video/*"
          multiple
        >
        <div
          id="custom-glaze-file-list-{{ section_id }}"
          class="custom-glaze-support-form__file-list-{{ section_id }}"
        ></div>
      </div>

      <button
        type="submit"
        class="custom-glaze-support-form__submit-button-{{ section_id }}"
      >
        {{ section.settings.submit_button_text }}
      </button>
    {%- endform -%}
  </div>
</glaze-support-form-{{ section_id }}>

<script>
  (function() {
    class GlazeSupportForm{{ section_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.checkbox = this.querySelector('#custom-glaze-questionnaire-checkbox-{{ section_id }}');
        this.conditionalSection = this.querySelector('#custom-glaze-conditional-section-{{ section_id }}');
        this.uploadTrigger = this.querySelector('#custom-glaze-upload-trigger-{{ section_id }}');
        this.fileInput = this.querySelector('#custom-glaze-file-input-{{ section_id }}');
        this.fileList = this.querySelector('#custom-glaze-file-list-{{ section_id }}');
        this.files = [];

        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.checkbox && this.conditionalSection) {
          this.checkbox.addEventListener('change', () => {
            if (this.checkbox.checked) {
              this.conditionalSection.classList.add('active');
            } else {
              this.conditionalSection.classList.remove('active');
            }
          });
        }

        if (this.uploadTrigger && this.fileInput) {
          this.uploadTrigger.addEventListener('click', () => {
            this.fileInput.click();
          });

          this.fileInput.addEventListener('change', (e) => {
            const newFiles = Array.from(e.target.files);
            this.files = this.files.concat(newFiles);
            this.renderFileList();
          });
        }
      }

      renderFileList() {
        if (!this.fileList) return;

        this.fileList.innerHTML = '';

        this.files.forEach((file, index) => {
          const fileItem = document.createElement('div');
          fileItem.className = 'custom-glaze-support-form__file-item-{{ section_id }}';

          const fileName = document.createElement('span');
          fileName.textContent = file.name;

          const removeButton = document.createElement('button');
          removeButton.type = 'button';
          removeButton.className = 'custom-glaze-support-form__file-remove-{{ section_id }}';
          removeButton.textContent = '×';
          removeButton.setAttribute('aria-label', 'Remove ' + file.name);
          removeButton.addEventListener('click', () => {
            this.files.splice(index, 1);
            this.renderFileList();
          });

          fileItem.appendChild(fileName);
          fileItem.appendChild(removeButton);
          this.fileList.appendChild(fileItem);
        });
      }
    }

    customElements.define('glaze-support-form-{{ section_id }}', GlazeSupportForm{{ section_id }});
  })();
</script>

