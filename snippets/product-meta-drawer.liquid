{% comment %} {% assign drawers.id = section_id | replace: '_', '' | downcase %} {% endcomment %}

{%- assign drawers = blocks | where: 'type', 'meta_panel' | first -%}
{%- assign show_meta = drawers.settings.show_meta -%}

{% style %}
  .block-slide-panel-{{ drawers.id }} {
    display: block;
    width: 100%;
  }

  .block-slide-panel-toggle-{{ drawers.id }} {
    padding: 15px 30px;
    background-color: {{ drawers.settings.button_background_color }};
    color: {{ drawers.settings.button_text_color }};
    border: 1px solid {{ drawers.settings.button_border_color }};
    border-radius: {{ drawers.settings.button_border_radius }}px;
    font-size: {{ drawers.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .block-slide-panel-toggle-{{ drawers.id }}:hover {
    background-color: {{ drawers.settings.button_hover_background_color }};
    color: {{ drawers.settings.button_hover_text_color }};
    border-color: {{ drawers.settings.button_hover_border_color }};
  }

  .block-slide-panel-overlay-{{ drawers.id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ drawers.settings.overlay_color }};
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }

  .block-slide-panel-overlay-{{ drawers.id }}.active {
    opacity: {{ drawers.settings.overlay_opacity | divided_by: 100.0 }};
    visibility: visible;
  }

  .block-slide-panel-content-{{ drawers.id }} {
    position: fixed;
    top: 0;
    right: 0;
    width: {{ drawers.settings.panel_width }}px;
    max-width: 90%;
    height: 100%;
    background-color: {{ drawers.settings.panel_background_color }};
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1000;
    overflow-y: auto;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
  }

  .block-slide-panel-content-{{ drawers.id }}.active {
    transform: translateX(0);
  }

  .block-slide-panel-header-{{ drawers.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid {{ drawers.settings.panel_border_color }};
  }

  .block-slide-panel-title-{{ drawers.id }} {
    font-size: {{ drawers.settings.panel_title_size }}px;
    color: {{ drawers.settings.panel_text_color }};
    margin: 0;
  }

  .block-slide-panel-close-{{ drawers.id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ drawers.settings.panel_text_color }};
    transition: opacity 0.3s ease;
  }

  .block-slide-panel-close-{{ drawers.id }}:hover {
    opacity: 0.7;
  }

  .block-slide-panel-close-{{ drawers.id }} svg {
    width: 24px;
    height: 24px;
  }

  .block-slide-panel-body-{{ drawers.id }} {
    padding: 20px;
    color: {{ drawers.settings.panel_text_color }};
  }

  .block-slide-panel-body-{{ drawers.id }} p {
    margin: 0 0 15px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .block-slide-panel-content-{{ drawers.id }} {
      width: {{ drawers.settings.panel_width_mobile }}px;
    }
  }
{% endstyle %}

{% if show_meta %}
<section class="block-slide-panel-{{ drawers.id }}" {{ drawers.shopify_attributes }}>
  <button class="block-slide-panel-toggle-{{ drawers.id }}" aria-label="Open panel" aria-expanded="false">
    {{ drawers.settings.button_text }}
  </button>

  <div class="block-slide-panel-overlay-{{ drawers.id }}"></div>

  <div class="block-slide-panel-content-{{ drawers.id }}">
    <div class="block-slide-panel-header-{{ drawers.id }}">
      <h2 class="block-slide-panel-title-{{ drawers.id }}">{{ drawers.settings.panel_title }}</h2>
      <button class="block-slide-panel-close-{{ drawers.id }}" aria-label="Close panel">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="block-slide-panel-body-{{ drawers.id }}">
      {{ drawers.settings.panel_content }}
    </div>
  </div>
  </div>
</slide-panel-{{ drawers.id }}>
{% endif %}
{% comment %} 

<script>
  (function() {
    class SlidePanel{{ drawers.id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.toggleButton = this.querySelector('.block-slide-panel-toggle-{{ drawers.id }}');
        this.overlay = this.querySelector('.block-slide-panel-overlay-{{ drawers.id }}');
        this.panel = this.querySelector('.block-slide-panel-content-{{ drawers.id }}');
        this.closeButton = this.querySelector('.block-slide-panel-close-{{ drawers.id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.toggleButton.addEventListener('click', () => this.openPanel());
        this.closeButton.addEventListener('click', () => this.closePanel());
        this.overlay.addEventListener('click', () => this.closePanel());

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.panel.classList.contains('active')) {
            this.closePanel();
          }
        });
      }

      openPanel() {
        this.overlay.classList.add('active');
        this.panel.classList.add('active');
        this.toggleButton.setAttribute('aria-expanded', 'true');
        document.body.style.overflow = 'hidden';
      }

      closePanel() {
        this.overlay.classList.remove('active');
        this.panel.classList.remove('active');
        this.toggleButton.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      }
    }

    customElements.define('slide-panel-{{ drawers.id }}', SlidePanel{{ drawers.id }});
  })();
</script> {% endcomment %}
